<h1>YOUR LIT PLAYLIST: <%= @playlist.name %></h1>

<div id="songs">
  SONG LIST:
  <ol>
    <% if @playlist.songs.empty? %>
      BOO NO SONGS.
      <% if current_user.id == @playlist.user_id %>
        <a href="/songs/new">PLS ADD.</a>
      <% end %>
    <% else %>
      <% @playlist.songs.each do |s| %>
      <li>
        <%= s.details %>
        <form action="/songs/<%= s.id %>/edit" method="get">
          <button type="submit">EDIT IT</button>
        </form>
        <form action="/songs/<%= s.id %>" method="post">
          <button type="submit" name="button" onclick="return confirm('Are you sure?')">DUMP IT</button>
        </form>
      </li>
      <% end %>
    <% end %>
  </ol>
</div>
